@model List<ayhankizil.Models.Paylasim>
@{
    ViewData["Title"] = "Onay Bekleyen Paylaşımlar";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Onay Bekleyen Paylaşımlar</h2>
        <a class="btn btn-secondary" asp-action="Logout">Çıkış Yap</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Onay bekleyen paylaşım bulunmuyor.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>İçerik</th>
                        <th>Resimler</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.AdSoyad</td>
                            <td>@p.Email</td>
                            <td>@p.Icerik</td>
                            <td>
                                @if (!string.IsNullOrEmpty(p.Foto1))
                                {
                                    <img src="@p.Foto1" class="img-thumbnail" style="max-width:80px;">
                                }
                                @if (!string.IsNullOrEmpty(p.Foto2))
                                {
                                    <img src="@p.Foto2" class="img-thumbnail" style="max-width:80px;">
                                }
                            </td>
                            <td>
                                <form method="post" asp-action="Onayla" style="display:inline">
                                    <input type="hidden" name="id" value="@p.Id" />
                                    <button type="submit" class="btn btn-success btn-sm">Onayla</button>
                                </form>
                                <form method="post" asp-action="Sil" style="display:inline">
                                    <input type="hidden" name="id" value="@p.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
