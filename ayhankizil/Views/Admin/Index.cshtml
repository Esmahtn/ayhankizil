@model List<ayhankizil.Models.Paylasim>
@{
    ViewData["Title"] = "Tüm Paylaşımlar";
}

<div class="container mt-4">
    <div class="bg-white p-3 rounded shadow-sm">
        <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
            <h2>Tüm Paylaşımlar</h2>
            <form asp-action="Logout" method="post" style="display: inline;">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-secondary" style="border: none;">Çıkış Yap</button>
            </form>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info">Paylaşım bulunmuyor.</div>
        }
        else
        {
            <div class="table-responsive d-none d-lg-block">
                <table class="table table-striped table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>İçerik</th>
                            <th>Resimler</th>
                            <th>Eklenme Tarihi</th>
                            <th>Durum</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr id="row-@p.Id">
                                <td>@p.AdSoyad</td>
                                <td>@p.Email</td>
                                <td style="max-width: 250px; word-wrap: break-word; white-space: pre-wrap;">@p.Icerik</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(p.Foto1))
                                    {
                                        <img src="@p.Foto1" class="img-thumbnail me-1 clickable-img" style="max-width:60px; cursor:pointer;"
                                             data-bs-toggle="modal" data-bs-target="#imageModal" data-bs-src="@p.Foto1" />
                                    }
                                    @if (!string.IsNullOrEmpty(p.Foto2))
                                    {
                                        <img src="@p.Foto2" class="img-thumbnail clickable-img" style="max-width:60px; cursor:pointer;"
                                             data-bs-toggle="modal" data-bs-target="#imageModal" data-bs-src="@p.Foto2" />
                                    }
                                </td>
                                <td style="white-space: nowrap; font-size: 13px;">
                                    <div>@p.EklenmeTarihi.ToString("dd.MM.yyyy")</div>
                                    <div class="text-muted">@p.EklenmeTarihi.ToString("HH:mm")</div>
                                </td>
                                <td>
                                    @if (p.Onayli)
                                    {
                                        <span class="badge bg-success">Onaylı</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Onay Bekliyor</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex flex-wrap gap-2">
                                        @if (p.Onayli)
                                        {
                                            <form method="post" asp-action="OnayKaldir" onsubmit="handleButtonClick(event, 'unapprove', @p.Id)">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@p.Id" />
                                                <button type="submit" class="btn btn-warning btn-sm action-btn" id="unapprove-@p.Id">
                                                    <span class="btn-text">Onaydan Kaldır</span>
                                                    <span class="spinner-border spinner-border-sm d-none"></span>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form method="post" asp-action="Onayla" onsubmit="handleButtonClick(event, 'approve', @p.Id)">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@p.Id" />
                                                <button type="submit" class="btn btn-success btn-sm action-btn" id="approve-@p.Id">
                                                    <span class="btn-text">Onayla</span>
                                                    <span class="spinner-border spinner-border-sm d-none"></span>
                                                </button>
                                            </form>
                                        }

                                        <form method="post" asp-action="Sil" onsubmit="handleButtonClick(event, 'delete', @p.Id)">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@p.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm action-btn" id="delete-@p.Id">
                                                <span class="btn-text">Sil</span>
                                                <span class="spinner-border spinner-border-sm d-none"></span>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-block d-lg-none">
                @foreach (var p in Model)
                {
                    <div class="card mb-3" id="card-@p.Id">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2 flex-wrap">
                                <h5 class="card-title mb-0">@p.AdSoyad</h5>
                                <div class="d-flex align-items-center gap-2 flex-wrap">
                                    <small class="text-muted" style="font-size: 12px;">
                                        @p.EklenmeTarihi.ToString("dd.MM.yyyy HH:mm")
                                    </small>
                                    @if (p.Onayli)
                                    {
                                        <span class="badge bg-success">Onaylı</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Onay Bekliyor</span>
                                    }
                                </div>
                            </div>
                            <p class="text-muted mb-2" style="word-break: break-word; font-size: 14px;">@p.Email</p>
                            <p style="font-size: 14px; word-break: break-word; white-space: pre-wrap;">@p.Icerik</p>
                            <div class="mb-2">
                                @if (!string.IsNullOrEmpty(p.Foto1))
                                {
                                    <img src="@p.Foto1" class="img-thumbnail me-1 clickable-img" style="max-width:80px; cursor:pointer;"
                                         data-bs-toggle="modal" data-bs-target="#imageModal" data-bs-src="@p.Foto1" />
                                }
                                @if (!string.IsNullOrEmpty(p.Foto2))
                                {
                                    <img src="@p.Foto2" class="img-thumbnail clickable-img" style="max-width:80px; cursor:pointer;"
                                         data-bs-toggle="modal" data-bs-target="#imageModal" data-bs-src="@p.Foto2" />
                                }
                            </div>
                            <div class="d-flex flex-wrap gap-2">
                                @if (p.Onayli)
                                {
                                    <form method="post" asp-action="OnayKaldir" onsubmit="handleButtonClick(event, 'unapprove', @p.Id)">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@p.Id" />
                                        <button type="submit" class="btn btn-warning btn-sm action-btn" id="unapprove-mobile-@p.Id">
                                            <span class="btn-text">Onaydan Kaldır</span>
                                            <span class="spinner-border spinner-border-sm d-none"></span>
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form method="post" asp-action="Onayla" onsubmit="handleButtonClick(event, 'approve', @p.Id)">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@p.Id" />
                                        <button type="submit" class="btn btn-success btn-sm action-btn" id="approve-mobile-@p.Id">
                                            <span class="btn-text">Onayla</span>
                                            <span class="spinner-border spinner-border-sm d-none"></span>
                                        </button>
                                    </form>
                                }

                                <form method="post" asp-action="Sil" onsubmit="handleButtonClick(event, 'delete', @p.Id)">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@p.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm action-btn" id="delete-mobile-@p.Id">
                                        <span class="btn-text">Sil</span>
                                        <span class="spinner-border spinner-border-sm d-none"></span>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content bg-transparent border-0">
            <div class="modal-body p-0 text-center">
                <img id="modalImage" src="" class="img-fluid" style="max-width: 80%; max-height: 80vh;" />
            </div>
        </div>
    </div>
</div>

<script>
    // handleButtonClick ve modal scriptleri aynen korunuyor

    // Resim tıklanınca modalda açılması için
    document.addEventListener("DOMContentLoaded", function () {
        const modalImage = document.getElementById("modalImage");
        document.querySelectorAll(".clickable-img").forEach(img => {
            img.addEventListener("click", function () {
                const src = this.getAttribute("data-bs-src");
                modalImage.setAttribute("src", src);
            });
        });
    });
</script>

<style>
    .card-body .action-btn {
        flex: 1 1 auto;
        min-width: 70px;
    }

    /* Küçük ve orta ekranlar için responsive ayar */
    media (max-width: 991px) {
        .card-body .action-btn

    {
        min-width: 100%; /* Butonları tam genişlik yap */
    }

    }

    .card {
        width: 100%;
        word-break: break-word;
        overflow-wrap: break-word;
    }
</style>
