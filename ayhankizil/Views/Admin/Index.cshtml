@model List<ayhankizil.Models.Paylasim>
@{
    ViewData["Title"] = "Tüm Paylaşımlar";
}

<div class="container mt-4">
    <!-- Beyaz arkaplan kutu -->
    <div class="bg-white p-3 rounded shadow-sm">
        <!-- Başlık -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Tüm Paylaşımlar</h2>
            <form asp-action="Logout" method="post" style="display: inline;">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-secondary" style="border: none;">Çıkış Yap</button>
            </form>
        </div>

        <!-- Bilgi -->
        <div class="alert alert-info mb-3">
            <strong>Bilgi:</strong> Yeşil butonlar onaylı paylaşımları, kırmızı butonlar onaysız paylaşımları gösterir.
            Onaylı paylaşımlar ana sayfada görünür.
        </div>

        <!-- İçerik -->
        @if (!Model.Any())
        {
            <div class="alert alert-info">Paylaşım bulunmuyor.</div>
        }
        else
        {
            <!-- Masaüstü tablosu -->
            <div class="table-responsive d-none d-md-block">
                <table class="table table-striped table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>İçerik</th>
                            <th>Resimler</th>
                            <th>Eklenme Tarihi</th>
                            <th>Durum</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr id="row-@p.Id">
                                <td>@p.AdSoyad</td>
                                <td>@p.Email</td>
                                <td style="max-width: 200px; word-wrap: break-word;">
                                    @if (p.Icerik.Length > 50)
                                    {
                                        @(p.Icerik.Substring(0, 50) + "...")
                                    }
                                    else
                                    {
                                        @p.Icerik
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(p.Foto1))
                                    {
                                        <img src="@p.Foto1" class="img-thumbnail" style="max-width:60px;">
                                    }
                                    @if (!string.IsNullOrEmpty(p.Foto2))
                                    {
                                        <img src="@p.Foto2" class="img-thumbnail" style="max-width:60px;">
                                    }
                                </td>
                                <td style="white-space: nowrap; font-size: 13px;">
                                    <div>@p.EklenmeTarihi.ToString("dd.MM.yyyy")</div>
                                    <div class="text-muted">@p.EklenmeTarihi.ToString("HH:mm")</div>
                                </td>
                                <td>
                                    @if (p.Onayli)
                                    {
                                        <span class="badge bg-success">Onaylı</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Onay Bekliyor</span>
                                    }
                                </td>
                                <td>
                                    @if (p.Onayli)
                                    {
                                        <!-- Onaylı paylaşım - Onaydan kaldır butonu -->
                                        <form method="post" asp-action="OnayKaldir" style="display:inline" onsubmit="handleButtonClick(event, 'unapprove', @p.Id)">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@p.Id" />
                                            <button type="submit" class="btn btn-warning btn-sm action-btn" id="unapprove-@p.Id" style="transition: all 0.3s ease; min-width: 100px;">
                                                <span class="btn-text">Onaydan Kaldır</span>
                                                <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <!-- Onaysız paylaşım - Onayla butonu -->
                                        <form method="post" asp-action="Onayla" style="display:inline" onsubmit="handleButtonClick(event, 'approve', @p.Id)">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@p.Id" />
                                            <button type="submit" class="btn btn-success btn-sm action-btn" id="approve-@p.Id" style="transition: all 0.3s ease; min-width: 70px;">
                                                <span class="btn-text">Onayla</span>
                                                <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                            </button>
                                        </form>
                                    }

                                    <!-- Sil butonu her zaman var -->
                                    <form method="post" asp-action="Sil" style="display:inline" onsubmit="handleButtonClick(event, 'delete', @p.Id)">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@p.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm action-btn" id="delete-@p.Id" style="transition: all 0.3s ease; min-width: 70px;">
                                            <span class="btn-text">Sil</span>
                                            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Mobil görünüm -->
            <div class="d-block d-md-none">
                @foreach (var p in Model)
                {
                    <div class="card mb-3" id="card-@p.Id">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="card-title mb-0">@p.AdSoyad</h5>
                                <div class="d-flex align-items-center gap-2">
                                    <small class="text-muted" style="font-size: 12px;">
                                        @p.EklenmeTarihi.ToString("dd.MM.yyyy HH:mm")
                                    </small>
                                    @if (p.Onayli)
                                    {
                                        <span class="badge bg-success">Onaylı</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Onay Bekliyor</span>
                                    }
                                </div>
                            </div>
                            <p class="text-muted mb-2" style="word-break: break-word; font-size: 14px;">@p.Email</p>
                            <p style="font-size: 14px;">
                                @if (p.Icerik.Length > 100)
                                {
                                    @(p.Icerik.Substring(0, 100) + "...")
                                }
                                else
                                {
                                    @p.Icerik
                                }
                            </p>
                            <div class="mb-2">
                                @if (!string.IsNullOrEmpty(p.Foto1))
                                {
                                    <img src="@p.Foto1" class="img-thumbnail me-1" style="max-width:80px;">
                                }
                                @if (!string.IsNullOrEmpty(p.Foto2))
                                {
                                    <img src="@p.Foto2" class="img-thumbnail" style="max-width:80px;">
                                }
                            </div>
                            <div>
                                @if (p.Onayli)
                                {
                                    <!-- Onaylı paylaşım - Onaydan kaldır butonu -->
                                    <form method="post" asp-action="OnayKaldir" style="display:inline" onsubmit="handleButtonClick(event, 'unapprove', @p.Id)">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@p.Id" />
                                        <button type="submit" class="btn btn-warning btn-sm action-btn" id="unapprove-mobile-@p.Id" style="transition: all 0.3s ease; min-width: 100px;">
                                            <span class="btn-text">Onaydan Kaldır</span>
                                            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <!-- Onaysız paylaşım - Onayla butonu -->
                                    <form method="post" asp-action="Onayla" style="display:inline" onsubmit="handleButtonClick(event, 'approve', @p.Id)">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@p.Id" />
                                        <button type="submit" class="btn btn-success btn-sm action-btn" id="approve-mobile-@p.Id" style="transition: all 0.3s ease; min-width: 70px;">
                                            <span class="btn-text">Onayla</span>
                                            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                        </button>
                                    </form>
                                }

                                <!-- Sil butonu her zaman var -->
                                <form method="post" asp-action="Sil" style="display:inline" onsubmit="handleButtonClick(event, 'delete', @p.Id)">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@p.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm action-btn" id="delete-mobile-@p.Id" style="transition: all 0.3s ease; min-width: 70px;">
                                        <span class="btn-text">Sil</span>
                                        <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<script>
    function handleButtonClick(event, action, id) {
        // Form submit'ini durdur
        event.preventDefault();

        // Button elementlerini bul
        const desktopBtn = document.getElementById(getButtonId(action, id, false));
        const mobileBtn = document.getElementById(getButtonId(action, id, true));

        // Her iki button için de işlemi uygula
        [desktopBtn, mobileBtn].filter(btn => btn).forEach(button => {
            // Loading durumunu başlat
            button.classList.add('loading');
            button.disabled = true;

            // Spinner'ı göster, text'i gizle
            const spinner = button.querySelector('.spinner-border');
            const text = button.querySelector('.btn-text');

            if (spinner) spinner.classList.remove('d-none');
            if (text) text.style.opacity = '0.5';
        });

        // Satır veya kartı bul
        const row = document.getElementById(`row-${id}`);
        const card = document.getElementById(`card-${id}`);

        // İşlem tipine göre renk değişikliği ve mesaj
        setTimeout(() => {
            [desktopBtn, mobileBtn].filter(btn => btn).forEach(button => {
                const spinner = button.querySelector('.spinner-border');
                const text = button.querySelector('.btn-text');

                // Spinner'ı gizle
                if (spinner) spinner.classList.add('d-none');

                if (action === 'approve') {
                    button.style.backgroundColor = '#28a745';
                    button.style.borderColor = '#28a745';
                    button.style.transform = 'scale(1.05)';
                    if (text) {
                        text.textContent = 'Onaylandı!';
                        text.style.opacity = '1';
                    }
                } else if (action === 'unapprove') {
                    button.style.backgroundColor = '#ffc107';
                    button.style.borderColor = '#ffc107';
                    button.style.transform = 'scale(1.05)';
                    if (text) {
                        text.textContent = 'Kaldırıldı!';
                        text.style.opacity = '1';
                    }
                } else if (action === 'delete') {
                    button.style.backgroundColor = '#dc3545';
                    button.style.borderColor = '#dc3545';
                    button.style.transform = 'scale(1.05)';
                    if (text) {
                        text.textContent = 'Silindi!';
                        text.style.opacity = '1';
                    }
                }

                button.disabled = true;
            });

            // Satır/kartı fade out yap
            if (row) {
                row.style.opacity = '0.5';
                row.style.transform = 'scale(0.98)';
                row.style.transition = 'all 0.5s ease-in-out';
            }
            if (card) {
                card.style.opacity = '0.5';
                card.style.transform = 'scale(0.98)';
                card.style.transition = 'all 0.5s ease-in-out';
            }

            // 1 saniye sonra formu submit et
            setTimeout(() => {
                event.target.submit();
            }, 1000);

        }, 800); // 800ms loading süresi

        return false;
    }

    // Button ID'sini dinamik olarak oluştur
    function getButtonId(action, id, isMobile) {
        const suffix = isMobile ? '-mobile' : '';
        switch(action) {
            case 'approve':
                return `approve${suffix}-${id}`;
            case 'unapprove':
                return `unapprove${suffix}-${id}`;
            case 'delete':
                return `delete${suffix}-${id}`;
            default:
                return '';
        }
    }
</script>